<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tianmigangwan.mapper.UserMapper">

    <sql id="columns">`id`,`nickname`,`gender`,`phone_number`,`email`,`city`,`password`,`create_time`,`update_time`</sql>


    <select id="queryUserByPhoneNumber" resultType="user" parameterType="string">
        select
        <include refid="columns"/>
        from `user`
        where `phone_number`=#{phoneNumber};
    </select>

</mapper>